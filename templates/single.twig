{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1">{{post.title}}</h1>
				<p class="blog-author">
					{{ post.post_date|date}}
				</p>
				{% if post.get_field('music') %}
					<div class="post-media">
						{{post.get_field('music')}}
					</div>
				{% elseif post.get_field('video') %}
					<div class="post-media">
						{{post.get_field('video')}}
					</div>
				{% endif %}
				<div class="article-body">
					{{post.content}}
				</div>
				<div class="post-gallery">
					{% if post.get_field('image_gallery') %}
						{% for image in post.get_field('image_gallery') %}
							<img src="{{ TimberImage(image) }}" alt="{{ post.title }}"/>
						{% endfor %}
					{% endif %}
				</div>
			</section>
		{% if post.comment_status != 'closed' %}
			<section class="comments">
				<div class="respond">
					<h3 class="f4">Comments</h3>
					{{ fn('comment_form') }}
				</div>
				<div class="responses">
					{% for cmt in post.get_comments() %}
						{% include "comment.twig" with {comment:cmt} %}
					{% endfor %}
				</div>
			</section>
		{% endif %}
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
